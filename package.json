{
  "name": "llamara-frontend",
  "version": "0.0.0",
  "description": "LLAMARA Frontend",
  "repository": "https://github.com/llamara/llamara-frontend",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "prebuild": "copyfiles -f node_modules/pdfjs-dist/build/pdf.worker.mjs public/",
    "postinstall": "copyfiles -f node_modules/pdfjs-dist/build/pdf.worker.mjs public/",
    "lint": "eslint src --ignore-pattern 'src/api/*' --ignore-pattern 'src/components/ui/*' --ignore-pattern 'src/tests/*'",
    "lint:fix": "eslint src --fix --ignore-pattern 'src/api/*' --ignore-pattern 'src/components/ui/*' --ignore-pattern 'src/tests/*'",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "preview": "vite preview",
    "pretest": "npm run lint && npm run format:check",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "generate:api": "tsx --import tsx ./scripts/apigen.ts",
    "generate:pwa-assets": "pwa-assets-generator --preset minimal-2023 public/favicon.svg"
  },
  "dependencies": {
    "@hey-api/client-fetch": "^0.10.0",
    "@hey-api/openapi-ts": "^0.67.6",
    "@radix-ui/react-alert-dialog": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.4",
    "@radix-ui/react-checkbox": "^1.3.1",
    "@radix-ui/react-collapsible": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-hover-card": "^1.1.7",
    "@radix-ui/react-label": "^2.1.3",
    "@radix-ui/react-navigation-menu": "^1.2.6",
    "@radix-ui/react-progress": "^1.1.3",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.3",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-tooltip": "^1.2.4",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.10.5",
    "i18next": "^25.1.2",
    "i18next-browser-languagedetector": "^8.1.0",
    "lucide-react": "^0.509.0",
    "next-themes": "^0.4.6",
    "print-js": "^1.6.0",
    "react": "^19.0.0",
    "react-code-blocks": "^0.1.6",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-i18next": "^15.5.1",
    "react-markdown": "^10.1.0",
    "react-oauth2-code-pkce": "^1.23.0",
    "react-pdf": "^9.2.1",
    "react-router": "^7.6.0",
    "react-usestateref": "^1.0.9",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@tailwindcss/postcss": "^4.1.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vite-pwa/assets-generator": "^1.0.0",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "@vitest/coverage-v8": "^3.1.3",
    "autoprefixer": "^10.4.21",
    "copyfiles": "^2.4.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.1",
    "prettier": "3.5.3",
    "tailwindcss": "^4.1.5",
    "tsx": "^4.19.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "^3.1.2"
  }
}
