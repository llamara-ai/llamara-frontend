{
  "name": "llamara-frontend",
  "version": "0.0.0",
  "description": "LLAMARA Frontend",
  "repository": "https://github.com/llamara/llamara-frontend",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "prebuild": "copyfiles -f node_modules/pdfjs-dist/build/pdf.worker.mjs public/",
    "postinstall": "copyfiles -f node_modules/pdfjs-dist/build/pdf.worker.mjs public/",
    "lint": "eslint src --ignore-pattern 'src/api/*' --ignore-pattern 'src/components/ui/*' --ignore-pattern 'src/tests/*'",
    "lint:fix": "eslint src --fix --ignore-pattern 'src/api/*' --ignore-pattern 'src/components/ui/*' --ignore-pattern 'src/tests/*'",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "preview": "vite preview",
    "pretest": "npm run lint && npm run format:check",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "generate:api": "openapi-ts",
    "generate:pwa-assets": "pwa-assets-generator --preset minimal-2023 public/favicon.svg"
  },
  "dependencies": {
    "@hey-api/openapi-ts": "^0.85.0",
    "@radix-ui/react-alert-dialog": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.4",
    "@radix-ui/react-checkbox": "^1.3.1",
    "@radix-ui/react-collapsible": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-hover-card": "^1.1.7",
    "@radix-ui/react-label": "^2.1.3",
    "@radix-ui/react-navigation-menu": "^1.2.6",
    "@radix-ui/react-progress": "^1.1.3",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.3",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-tooltip": "^1.2.4",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.12",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.544.0",
    "next-themes": "^0.4.6",
    "print-js": "^1.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.2.0",
    "react-dropzone": "^14.3.8",
    "react-i18next": "^16.0.0",
    "react-markdown": "^10.1.0",
    "react-oauth2-code-pkce": "^1.23.0",
    "react-pdf": "^10.2.0",
    "react-router": "^7.9.1",
    "react-syntax-highlighter": "^15.6.1",
    "react-usestateref": "^1.0.9",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@tailwindcss/postcss": "^4.1.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.7.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.2.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vite-pwa/assets-generator": "^1.0.0",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "@vitest/coverage-v8": "^3.2.0",
    "autoprefixer": "^10.4.21",
    "copyfiles": "^2.4.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.1",
    "prettier": "3.6.0",
    "tailwindcss": "^4.1.5",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.6",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^3.2.0"
  }
}
