{
  "name": "llamara-frontend",
  "version": "0.0.0",
  "description": "LLAMARA Frontend",
  "repository": "https://github.com/llamara/llamara-frontend",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "prebuild": "copyfiles -f node_modules/pdfjs-dist/build/pdf.worker.mjs public/",
    "postinstall": "copyfiles -f node_modules/pdfjs-dist/build/pdf.worker.mjs public/",
    "lint": "eslint src --ignore-pattern 'src/api/*' --ignore-pattern 'src/components/ui/*' --ignore-pattern 'src/tests/*'",
    "lint:fix": "eslint src --fix --ignore-pattern 'src/api/*' --ignore-pattern 'src/components/ui/*' --ignore-pattern 'src/tests/*'",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "preview": "vite preview",
    "pretest": "npm run lint && npm run format:check",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "generate:api": "tsx --import tsx ./scripts/apigen.ts",
    "generate:pwa-assets": "pwa-assets-generator --preset minimal-2023 public/favicon.svg"
  },
  "dependencies": {
    "@hey-api/client-fetch": "^0.7.2",
    "@hey-api/openapi-ts": "^0.66.4",
    "@radix-ui/react-alert-dialog": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.4",
    "@radix-ui/react-checkbox": "^1.1.5",
    "@radix-ui/react-collapsible": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-hover-card": "^1.1.7",
    "@radix-ui/react-label": "^2.1.3",
    "@radix-ui/react-navigation-menu": "^1.2.6",
    "@radix-ui/react-progress": "^1.1.3",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.3",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-toast": "^1.2.7",
    "@radix-ui/react-tooltip": "^1.2.0",
    "@tanstack/react-table": "^8.20.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-react": "^7.37.5",
    "framer-motion": "^12.5.0",
    "i18next": "^24.2.2",
    "i18next-browser-languagedetector": "^8.0.2",
    "lucide-react": "^0.503.0",
    "next-themes": "^0.4.6",
    "print-js": "^1.6.0",
    "react": "^19.0.0",
    "react-code-blocks": "^0.1.6",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.5",
    "react-i18next": "^15.4.0",
    "react-markdown": "^9.0.3",
    "react-oauth2-code-pkce": "^1.23.0",
    "react-pdf": "^9.2.1",
    "react-router": "^7.5.2",
    "react-usestateref": "^1.0.9",
    "remark-gfm": "^4.0.1",
    "sonner": "^1.7.4",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@tailwindcss/postcss": "^4.1.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.3",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vite-pwa/assets-generator": "^1.0.0",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "@vitest/coverage-v8": "^3.1.1",
    "autoprefixer": "^10.4.21",
    "copyfiles": "^2.4.1",
    "eslint": "^9.24.0",
    "eslint-plugin-prettier": "^5.2.6",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.1",
    "prettier": "3.4.2",
    "tailwindcss": "^4.1.3",
    "tsx": "^4.19.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.28.0",
    "vite": "^6.2.6",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "^3.0.8"
  }
}
